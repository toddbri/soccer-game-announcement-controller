        android:scrollIndicators="right"
        android:spinnerMode="dialog"
        android:layout_weight=".2">
    </Spinner>

    <Button
        android:id="@+id/Play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_play"
        android:onClick="Play"
        android:layout_weight=".125" />

    <Button
        android:id="@+id/Pause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:onClick="MPPause"
        android:layout_weight=".125" />

    <Button
        android:id="@+id/Stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:onClick="MPStop"
        android:layout_weight=".125" />
    <ToggleButton
        android:id="@+id/Record2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textOff="Record"
        android:textOn="Stop"
        android:onClick="Record_Sound"
        android:layout_weight=".125" />

    <ToggleButton
        android:id="@+id/EnterSetup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Setup"
        android:onClick="EnterSetup"
        android:textOff="Setup"
        android:textOn="End Setup"
        android:layout_weight=".125" />
    <ToggleButton
        android:id="@+id/Files"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textOff="Manage Files"
        android:textOn="Manage Files"
        android:onClick="FileManagement"
        android:layout_weight=".125"
        android:layout_gravity="left" />
    <Button
        android:id="@+id/PlayRecording"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Play Recording"
        android:onClick="Play_Recording"
        android:layout_weight=".125"
        android:visibility="gone" />
    </LinearLayout>
